@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model MovieBuff.DTOs.MovieDetailDto
@{
    ViewData["Title"] = Model.Title;
    var imageBaseUrl = "https://image.tmdb.org/t/p/w500"; 
    var backdropBaseUrl = "https://image.tmdb.org/t/p/original";

    var directorName = "Bilgi Yok";
    var writerName = "Bilgi Yok";

    if(Model.Credits != null && Model.Credits.Crew != null && Model.Credits.Crew.Any())
    {
        var directors = Model.Credits.Crew.Where(d => d.Job == "Director").Select(d=> d.Name).ToList();
        if(directors.Any())
        {
            directorName = string.Join(",", directors);
        }
        var writers = Model.Credits.Crew.Where(w => w.Job == "Writer" || w.Job == "Screenplay").Select(w => w.Name).ToList();
        if(writers.Any())
        {
            writerName = string.Join(",", writers);
        }
    }

}
<style>
    body {
        background-color: #1a1d29;
        color: #fff;
    }
</style>
<div class="container-fluid">
    <div style="background-image: url('@(backdropBaseUrl + Model.BackdropPath)'); background-size: cover; background-position:center; position:relative; border-radius: 10px; height: 45%;">
        <div style="background: linear-gradient(to top, rgba(16, 18, 27, 1) 0%, rgba(16, 18, 27, 0.6) 100%); padding-top: 200px; padding-bottom: 50px;">
            <div class="container align-items-center text-white">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <img src="@(imageBaseUrl+ Model.PosterPath)" style="max-width: 300px; border-radius: 12px;"/>
                    </div>
    
                    <div class="col-md-8">
                        <h1 class="text-white">@Model.Title</h1>
                        <small class="text-white" style="font-size: 18px;">@Model.ReleaseDate.Substring(0, 4) - </small>
                        
                        @foreach(var genre in Model.Genres)
                        {
                            <small class="text-white" style="font-size: 18px;">@genre.Name</small>
                        }
                        <small class="text-white" style="font-size: 18px;">- @Model.Runtime dk</small>
                        <h3 class="text-white">Özet</h3>
                        <small class="mb-3" style="font-size: 18px;">@Model.Overview</small>
                        <div class="row mt-3">
                            <div class="col">
                                <button id="favoriteBtn" class="btn btn-primary btn-lg" data-filmid="@Model.Id" style="width: 95%;"><i class="fa-solid fa-heart"></i>  Favorilere Ekle</button>
                            </div>
                            <div class="col">
                                <button id="watchlaterBtn" class="btn btn-secondary btn-lg" data-filmid="@Model.Id" style="width: 95%;"><i class="fa-regular fa-clock"></i>  Daha Sonra İzle</button>
                            </div>
                        </div>
                        <h3 class="text-white">Oyuncular</h3>
                        <div class="row mb-3">
                            @if(Model.Credits != null && Model.Credits.Cast != null && Model.Credits.Cast.Any())
                            {
                                @foreach (var castMember in Model.Credits.Cast.Take(5))
                                {
                                    <div class="col-md-2">
                                        <div class="card bg-transparent border-0">
                                            @if (!string.IsNullOrEmpty(castMember.ProfilePath))
                                            {
                                                <img src="@(imageBaseUrl + castMember.ProfilePath)" class="rounded-circle mb-2"/>
                                            }
                                            else
                                            {
                                                <img src="/images/default-profile.webp" class="rounded-circle mb-2" />
                                            }
                                            <strong class="mb-1" style="color: white;">@castMember.Name</strong>
                                            <small class="mb-1" style="color: white;">@castMember.Character</small>
                                        </div>
                                    </div>
                                } 
                            }
                            else
                            {
                                <div class="col">
                                    <h5>Bu film için oyuncu bilgisi bulunamadı.</h5>
                                </div>
                            }
                            
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <h3 class="text-white">Yönetmen:</h3>
                                <h5 class="text-white" style="font-weight: lighter;">@directorName</h5>
                            </div>
                            <div class="col">
                                <h3 class="text-white">Senarist:</h3>
                                <h5 class="text-white" style="font-weight: lighter;">@writerName</h5>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h3>IMDB Puanı</h3>
                                <h5 class="text-white"><i class="fa-solid fa-star" style="color: blue;"></i>@Model.VoteAverage.ToString("0.0")/10</h5>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <h3 class="text-white">Puan Ver</h3>
                            <div id="star-rating" data-filmid="@Model.Id">
                                <i class="star fa-regular fa-star" data-value="1"></i>
                                <i class="star fa-regular fa-star" data-value="2"></i>
                                <i class="star fa-regular fa-star" data-value="3"></i>
                                <i class="star fa-regular fa-star" data-value="4"></i>
                                <i class="star fa-regular fa-star" data-value="5"></i>
                            </div>
                            <div id="ratingMessage" class="mt-2"></div>
                        </div>   
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function(){
            var isAuthenticated = @SignInManager.IsSignedIn(User).ToString().ToLower();
            var ratingMessageDiv = $('#ratingMessage');
            var stars = $('#star-rating .star');
            

            stars.on('click', function(){
                if(!checkAuthentication()) return;
                var filmId = $(this).data('filmid');
                if (!filmId || filmId == 0) 
                {
                    alert("Film ID'si bulunamadı. Lütfen sayfayı yenileyip tekrar deneyin.");
                    return;
                }
                var ratingValue = $(this).data('value');
                $('#star-rating').data('selected-value',ratingValue);
                highlightStars(ratingValue);
                $.ajax({
                    url: '/api/Interactions/RateMovies',
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify({ filmId: filmId, rating: ratingValue }),
                    success: function(response){
                        ratingMessageDiv.text(response.message).removeClass('text-danger').addClass('text-success');
                    },
                    error: function(){
                        ratingMessageDiv.text("Bir hata oluştu.").removeClass('text-success').addClass('text-danger');
                    }
                });
            });

            $("#favoriteBtn").click(function(){
                if (!checkAuthentication()) return;
                var filmId = $(this).data('filmid');
                if (!filmId || filmId == 0)
                {
                    alert("Film ID'si bulunamadı. Lütfen sayfayı yenileyip tekrar deneyin.");
                    return;
                }
                $.ajax({
                    url: '/api/Interactions/HandleFavorites',
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify({ filmId: filmId }),
                    success: function(response){
                        alert(response.message);
                    },
                    error: function(xhr){
                        alert("Bir hata oluştu.");
                    }
                })
            });

            $("#watchlaterBtn").click(function(){
                if (!checkAuthentication()) return;
                var filmId = $(this).data('filmid');
                if (!filmId || filmId == 0)
                {
                    alert("Film ID'si bulunamadı. Lütfen sayfayı yenileyip tekrar deneyin.");
                    return;
                }
                $.ajax({
                    url: '/api/Interactions/HandleWatchLaters',
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify({ filmId: filmId }),
                    success:function(response){
                        alert(response.message);
                    },
                    error: function(xhr){
                        alert("Bir hata oluştu.");
                    }
                })
            });

            function highlightStars(value){
                stars.each(function(){
                    var starValue = $(this).data('value');
                    if(starValue <= value){
                        $(this).addClass('selected').removeClass('fa-regular').addClass('fa-solid');
                    } else {
                        $(this).removeClass('selected').removeClass('fa-solid').addClass('fa-regular');
                    }
                });
            }

            function checkAuthentication(){
                if(!isAuthenticated){
                    var loginUrl = "@Url.Action("Login", "Account")";
                    var currentUrl = window.location.pathname + window.location.search;
                    var loginUrl = '@Url.Action("Login", "Account")' + `?returnUrl=${encodeURIComponent(currentUrl)}`;
                    var registerUrl = '@Url.Action("Register", "Account")' + `?returnUrl=${encodeURIComponent(currentUrl)}`;
                    var message = `Bu özelliği kullanabilmemiz için lütfen <a href="${loginUrl}">giriş yapın</a> veya <a href="${registerUrl}">kayıt olun</a>.`;
                    $('#alertMessage').html(message);
                    var alertModal = new bootstrap.Modal(document.getElementById('alertModal'));
                    alertModal.show();
                    return false;
                }
                return true;
            }
        });
    </script>
}
